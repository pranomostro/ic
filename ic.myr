use bio
use std

/*if the input contains the first argument*/
/*return true, otherwise return false*/

const main = {args : byte[:][:]
	if args.len != 2
		std.put("ic STR\n")
		std.exit(255)
	;;

	var input

	match bio.open("/dev/stdin", bio.Rd)
	| `std.Fail m:	std.put("ic: could not open /dev/stdin.\n")
			std.exit(254)
	| `std.Ok f: input=f
	;;

	for l in bio.lineiter(input)
		if std.strhas(l, args[1])
			std.exit(0);
		;;
	;;

	std.exit(1)
}
